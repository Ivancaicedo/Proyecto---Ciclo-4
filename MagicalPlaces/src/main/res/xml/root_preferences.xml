<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/sync_header">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="notifications"
            android:title="@string/sync_header"
            android:icon="@drawable/ic_notifications_active"/>
        <CheckBoxPreference
            app:dependency="notifications"
            android:defaultValue="false"
            android:key="sound_notification"
            android:title="Activar sonido de notificaciones"
            android:icon="@drawable/ic_volume"/>

    </PreferenceCategory>

</PreferenceScreen>