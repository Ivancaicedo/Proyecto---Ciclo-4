<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424143">

    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#703AA6"
        android:orientation="horizontal"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_width="183dp"
        android:layout_height="41dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:autoSizeTextType="uniform"
        android:text="@string/NuevaZelanda"
        app:layout_constraintBottom_toBottomOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        >


        <RelativeLayout
            android:id="@+id/layoutsirio"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:layout_margin="10dp"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/dhfedfhae" />

            <TextView
                android:id="@+id/sirio"
                android:layout_width="152dp"
                android:layout_height="32dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="51dp"
                android:layout_toEndOf="@+id/imageView"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="Hobbiton" />

            <TextView
                android:layout_width="158dp"
                android:layout_height="34dp"
                android:layout_below="@+id/sirio"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="43dp"
                android:layout_toEndOf="@+id/imageView"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="@string/HobbitonDescripcion" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout2"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:layout_margin="10dp"
            android:layout_below="@id/layoutsirio"

            >

            <ImageView
                android:id="@+id/imageTongariro"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/tongariro" />

            <TextView
                android:id="@+id/Tongariro"
                android:layout_width="144dp"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="51dp"
                android:layout_toEndOf="@+id/imageTongariro"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="@string/Tongariro" />

            <TextView
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_below="@+id/Tongariro"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="44dp"
                android:layout_toEndOf="@+id/imageTongariro"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="@string/TongariroDescripcion" />


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Milford"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:layout_margin="10dp"
            android:layout_below="@id/layoutsirio">


            <TextView
                android:id="@+id/tongariro3"
                android:layout_width="144dp"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="51dp"
                android:layout_toEndOf="@+id/imageMlford"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="@string/MilfordSound" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="160dp"
                android:layout_height="44dp"
                android:layout_below="@+id/tongariro3"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="44dp"
                android:layout_toEndOf="@+id/imageMlford"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="@string/MilfordSoundDescripcion" />

            <ImageView
                android:id="@+id/imageMlford"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                app:srcCompat="@mipmap/milford" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LayoutKahurangi"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:layout_margin="10dp"
            android:layout_below="@id/relativeLayout2">


            <TextView
                android:id="@+id/kahurangi"
                android:layout_width="144dp"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="51dp"
                android:layout_toEndOf="@+id/imageKahurangi"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="@string/kahurangi" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="159dp"
                android:layout_height="46dp"
                android:layout_below="@+id/kahurangi"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="42dp"
                android:layout_toEndOf="@+id/imageKahurangi"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="@string/kahurangiDescripcion" />

            <ImageView
                android:id="@+id/imageKahurangi"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                app:srcCompat="@mipmap/kahurangi" />
        </RelativeLayout>

<!--        Cathedral Cove-->

        <RelativeLayout
            android:id="@+id/LayoutCathedralCove"
            android:layout_width="wrap_content"
            android:layout_height="106dp"
            android:layout_margin="10dp"
            android:layout_below="@id/LayoutKahurangi">


            <TextView
                android:id="@+id/CathedralCove"
                android:layout_width="144dp"
                android:layout_height="33dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="51dp"
                android:layout_toEndOf="@+id/imageCathedralCove"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="@string/CathedralCove" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="159dp"
                android:layout_height="46dp"
                android:layout_below="@+id/CathedralCove"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="42dp"
                android:layout_toEndOf="@+id/imageCathedralCove"
                android:autoSizeTextType="uniform"
                android:color="@color/white"
                android:text="@string/CathedralCoveDescripcion" />

            <ImageView
                android:id="@+id/imageCathedralCove"
                android:layout_width="170dp"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                app:srcCompat="@mipmap/cathedralcove" />
        </RelativeLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>