<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/body"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D8D8D8">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#D8D8D8"
        app:layout_constraintBottom_toTopOf="@+id/scrollViewContenido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="275dp"
            android:layout_height="57dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.205"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.521"
            app:srcCompat="@mipmap/mobiledevs" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollViewContenido"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:background="@drawable/borde_redondo"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layoutsirio"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_margin="10dp"
                >


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/dhfedfhae" />

                <TextView
                    android:id="@+id/sirio"
                    android:layout_width="152dp"
                    android:layout_height="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="51dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:color="@color/white"
                    android:text="@string/Hobbiton"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="158dp"
                    android:layout_height="34dp"
                    android:layout_below="@+id/sirio"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="43dp"
                    android:layout_toEndOf="@+id/imageView"
                    android:color="@color/white"
                    android:text="@string/HobbitonDescripcion"
                    android:textSize="14sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_below="@id/layoutsirio"
                android:layout_margin="10dp"

                >

                <ImageView
                    android:id="@+id/imageTongariro"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/tongariro" />

                <TextView
                    android:id="@+id/Tongariro"
                    android:layout_width="144dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="51dp"
                    android:layout_toEndOf="@+id/imageTongariro"
                    android:color="@color/white"
                    android:text="@string/Tongariro"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="187dp"
                    android:layout_height="50dp"
                    android:layout_below="@+id/Tongariro"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="45dp"
                    android:layout_toEndOf="@+id/imageTongariro"
                    android:color="@color/white"
                    android:text="@string/TongariroDescripcion"
                    android:textSize="14sp" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Milford"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_below="@id/layoutsirio"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/tongariro3"
                    android:layout_width="144dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="51dp"
                    android:layout_toEndOf="@+id/imageMlford"
                    android:color="@color/white"
                    android:text="@string/MilfordSound"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="160dp"
                    android:layout_height="46dp"
                    android:layout_below="@+id/tongariro3"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="44dp"
                    android:layout_toEndOf="@+id/imageMlford"
                    android:color="@color/white"
                    android:text="@string/MilfordSoundDescripcion"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageMlford"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    app:srcCompat="@mipmap/milford" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/LayoutKahurangi"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_below="@id/relativeLayout2"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/kahurangi"
                    android:layout_width="144dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="51dp"
                    android:layout_toEndOf="@+id/imageKahurangi"
                    android:color="@color/white"
                    android:text="@string/kahurangi"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="192dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/kahurangi"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="40dp"
                    android:layout_toEndOf="@+id/imageKahurangi"
                    android:color="@color/white"
                    android:text="@string/kahurangiDescripcion"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageKahurangi"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    app:srcCompat="@mipmap/kahurangi" />
            </RelativeLayout>

            <!--        Cathedral Cove-->

            <RelativeLayout
                android:id="@+id/LayoutCathedralCove"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_below="@id/LayoutKahurangi"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/CathedralCove"
                    android:layout_width="144dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="51dp"
                    android:layout_toEndOf="@+id/imageCathedralCove"
                    android:color="@color/white"
                    android:text="@string/CathedralCove"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="189dp"
                    android:layout_height="51dp"
                    android:layout_below="@+id/CathedralCove"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="43dp"
                    android:layout_toEndOf="@+id/imageCathedralCove"
                    android:color="@color/white"
                    android:text="@string/CathedralCoveDescripcion"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageCathedralCove"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    app:srcCompat="@mipmap/cathedralcove" />
            </RelativeLayout>

            <!--                Elephant Rocks-->

            <RelativeLayout
                android:id="@+id/LayoutElephantRocks"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_below="@id/LayoutCathedralCove"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/ElephantRocks"
                    android:layout_width="144dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="51dp"
                    android:layout_toEndOf="@+id/imageElephantRocks"
                    android:color="@color/white"
                    android:text="@string/ElephantRocks"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="159dp"
                    android:layout_height="46dp"
                    android:layout_below="@+id/ElephantRocks"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="41dp"
                    android:layout_toEndOf="@+id/imageElephantRocks"
                    android:color="@color/white"
                    android:text="@string/ElephantRocksDescripcion"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageElephantRocks"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    app:srcCompat="@mipmap/elephantrocks" />
            </RelativeLayout>

            <!--                        Cuevas de Waitomo-->

            <RelativeLayout
                android:id="@+id/LayoutCuevasDeWaitomo"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_below="@id/LayoutElephantRocks"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/textDesCuevasWitomo"
                    android:layout_width="240dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="51dp"
                    android:layout_toEndOf="@+id/imageCuevasDeWaitomo"
                    android:color="@color/white"
                    android:text="@string/CuevasDeWaitomo"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewNombreWitomo"
                    android:layout_width="159dp"
                    android:layout_height="46dp"
                    android:layout_below="@+id/textDesCuevasWitomo"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="41dp"
                    android:layout_toEndOf="@+id/imageCuevasDeWaitomo"
                    android:color="@color/white"
                    android:text="@string/CuevasDeWaitomoDescripcion"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageCuevasDeWaitomo"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    app:srcCompat="@mipmap/cuevasdewitomo" />
            </RelativeLayout>


            <!--         Christchurch -->

            <RelativeLayout
                android:id="@+id/LayoutChristchurch"
                android:layout_width="wrap_content"
                android:layout_height="106dp"
                android:layout_below="@id/LayoutElephantRocks"
                android:layout_margin="10dp">


                <TextView
                    android:id="@+id/textDesChristchurch"
                    android:layout_width="240dp"
                    android:layout_height="42dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="51dp"
                    android:layout_toEndOf="@+id/imageChristchurch"
                    android:color="@color/white"
                    android:text="@string/Christchurch"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewNombreChristchurch"
                    android:layout_width="159dp"
                    android:layout_height="46dp"
                    android:layout_below="@+id/textDesChristchurch"
                    android:layout_alignParentEnd="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="41dp"
                    android:layout_toEndOf="@+id/imageChristchurch"
                    android:color="@color/white"
                    android:text="@string/ChristchurchDescripcion"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageChristchurch"
                    android:layout_width="170dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="0dp"
                    app:srcCompat="@mipmap/christchurch" />
            </RelativeLayout>


        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>